{
    "name" : "dockerify",
    "version" : "0.0.0",
    "description" : "Prepares any tarball containing a project so that a docker image can be built from it.",
    "main" : "index.js",
    "scripts" : {
      "test-main" :  "tap test/*.js",
      "test-0.8"  :  "nave use 0.8 npm run test-main",
      "test-0.10" :  "nave use 0.10 npm run test-main",
      "test-all": "npm run test-main && npm run test-0.8 && npm run test-0.10",
      "test"      :  "if [ -e $TRAVIS ]; then npm run test-all; else npm run test-main; fi"
    },
    "repository" : {
      "type" : "git",
      "url" : "git://github.com/thlorenz/dockerify.git"
    },
    "homepage" : "https://github.com/thlorenz/dockerify",
    "dependencies" : {
    },
    "devDependencies" : {
      "nave": "~0.4.3",
      "tape": "~1.0.4",
      "tap": "~0.4.3"
    },
    "keywords": [] ,
    "author" : {
      "name" : "Thorsten Lorenz",
      "email" : "thlorenz@gmx.de",
      "url" : "http://thlorenz.com"
    },
    "license" : {
      "type": "MIT",
      "url": "https://github.com/thlorenz/dockerify/blob/master/LICENSE"
    },
    "engine" : { "node" : ">=0.8" }
}
